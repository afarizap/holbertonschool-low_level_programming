#include "holberton.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * main - check the code for Holberton School students.
 *
 * Return: Always 0.
 */
char *str_concat(char *s1, char *s2)
{
	int a = 0;
	char *s;
	int b = 0;
	int aa = 0;
	int bb = 0;
	int ab = 0;

	if (s1 == '\0' && s2 == '\0')
		return ('\0');

	for (; s1[a] != '\0'; a++)
	{
	}
	for (; s2[b] != '\0'; b++)
	{
	}
	ab = a + b;
	s = malloc(sizeof(char) * ab);
	for (;aa <= a; aa++, s1++)
		s[aa] = s1;
	for (;bb <= b; bb++, s2++)
		s[aa + bb] = s2;
	return (s);
}

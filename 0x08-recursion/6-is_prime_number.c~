#include "holberton.h"
#include <stdio.h>

/**
 * is_prime_number - power of x times y with recursion.
 * _sqrt_recursion - asdasdsa
 *@n: number
 *@m: counter
 * Return: power of the number or -1 if negative.
 */

int _primenum(int n, int m)
{
	if (n < 2)
		return (0);
	if (n == m)
		return (1);
	if (n % m == 0)
		return (0);
	else
		return (_primenum(n, m + 1));
}
/**
 * _sqrt_recursion - asdasdsa
 *@n: asdasd
 * Return: asdsa
 */
int is_prime_number(int n)
{
	return (_primenum(n, 2));
}
